<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Myplanet Digital</title>

    <link rel="stylesheet" href="styles/reset.css">
    <link rel="stylesheet" href="styles/index.css">
</head>

<body>
	<a id="logo" href="#">Myplanet Digital</a>
	<div id="menu-button">Show Menu</div>
	<div id="menu">
		<ul>
			<% for tag in @getCollection("tags").toJSON(): %>
				<li><a href="#tags/<%= tag.name.split('.')[0] %>" class="<%= tag.label.toLowerCase() %>"><%= tag.label %></a></li>
			<% end %>
		</ul>
		<!--footer class="adr">
			<span class="street-address">252 Adelaide Street East</span>
			<span class="locality">Toronto</span>,
			<span class="region">ON</span>,
			<span class="country-name">Canada</span>
			<span class="postal-code">M5A 3W8</span>
			<span class="tel">866-232-7456</span>
			<a href="mailto:hi@myplanetdigital.com" class="email">hi@myplanetdigital.com</a>
		</footer-->
	</div>

    <div id="content"></div>

    <ul id="data">
		<% for post in @getCollection("posts").toJSON(): %>
            <% post.hash = '#articles/' + post.url.split('/').pop().replace(/\.html$/, ''); %>
            <% post.firstTag = post.tag.split(' ')[0].toLowerCase(); %>
            <li data-tags="<%= JSON.stringify(post.tag.toLowerCase().split(' ')) %>">
    			<% if post.tilestyle: %>
    				<% if post.tilestyle is "employee": %>
	                    <div class="tile people">    
	                        <a href="<%= post.hash %>">
					            <h2>
			            			<span>&ldquo;&ensp;<%= post.quote %>&ensp;&rdquo;</span>
			            		</h2>
			            		<% if post.authorimg: %>
							    	<img src="<%= post.authorimg %>">
				                <% end %>
				                <p class="name"><%= post.name %></p>
				            </a>
				            <span class="tag"><a href="#tags/people"></a></span>
				        </div>
			        <% else if post.tilestyle is "double-image": %>
			        	<div class="tile <%= post.firstTag %> double-image">
				        	<a href="<%= post.hash %>">
				                <img src="<%= post.tileimg %>">
				                <h2>
					            	<span><%= post.header %></span>
							    </h2>
				                <span class="author"><%= post.author %></span>
								<span class="date"><%= @moment(post.date).format('MMMM DD, YYYY') %></span>
				            </a>
				            <span class="author-link"><a href="#articles/<%= post.author.split(' ').join('_') %>"><%= post.author %></a></span>
							<span class="tag"><a href="#tags/<%= post.firstTag %>"></span>
						</div>
    				<% else: %>
    					<div class="tile <%= post.firstTag %> image">
							<a href="<%= post.hash %>">
				            	<h2>
					            	<span><%= post.header %></span>
							    </h2>
				                <img src="<%= post.tileimg %>">
				                <p><%= post.summary %></p>
				                <span class="author"><%= post.author %></span>
								<span class="date"><%= @moment(post.date).format('MMMM DD, YYYY') %></span>
				            </a>
				            <span class="author-link"><a href="#articles/<%= post.author.split(' ').join('_') %>"><%= post.author %></a></span>
							<span class="tag"><a href="#tags/<%= post.firstTag %>"></a></span>
						</div>
    			    <% end %>
    	        <% else: %>
    	        	<div class="tile <%= post.firstTag %>">
			        	<a data-tags="<%= JSON.stringify(post.tag.toLowerCase().split(' ')) %>"  href="<%= post.hash %>">
			            	<h2>
			            		<span><%= post.header %></span>
			            	</h2>
			                <p><%= post.summary %></p>
			                <span class="author"><%= post.author %></span>
							<span class="date"><%= @moment(post.date).format('MMMM DD, YYYY') %></span>
			            </a>
		            	<span class="author-link"><a href="#articles/<%= post.author.split(' ').join('_') %>"><%= post.author %></a></span>
						<span class="tag"><a href="#tags/<%= post.firstTag %>"></a></span>
					</div>
	            <% end %>
            </li>
	    <% end %>
	</ul>

    <!-- @todo replace with production asset pipeline -->
    <!--[if IE 8]>
    <script src="vendor/augment.js/augment.js"></script>
    <![endif]-->
    <script data-main="scripts/main" src="vendor/requirejs/require.js"></script>
</body>
</html>
